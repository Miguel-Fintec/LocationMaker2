<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardView"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    card_view:cardBackgroundColor="#FFFFFFFF"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="8dp"
    >
    <RelativeLayout
        android:id="@+id/rlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/itemimagePending"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="14dp"
            card_view:srcCompat="@drawable/circlependiente" />

        <TextView
            android:id="@+id/tvVisited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/itemimagePending"
            android:layout_toRightOf="@+id/itemimagePending"
            android:textColor="@color/SuburbColor"
            android:textSize="11sp"
            tools:text="Visited" />

        <TextView
            android:id="@+id/tvStreetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVisited"
            android:layout_toEndOf="@+id/itemimagePending"
            android:layout_toRightOf="@+id/itemimagePending"
            android:textColor="@color/StreedNameColor"
            android:textSize="13sp"
            tools:text="Streed Name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Suburb"
            android:id="@+id/tvSuburb"
            android:textSize="13sp"
            android:textColor="@color/SuburbColor"
            android:layout_toEndOf="@+id/itemimagePending"
            android:layout_toRightOf="@+id/itemimagePending"
            android:layout_below="@+id/tvStreetName"
            />

        <ImageView
            android:id="@+id/itemimageArrowRight"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="16dp"
            android:padding="1dp"
            card_view:srcCompat="@drawable/ic_arrow" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>